<div class='row'>
  <div class='col-md-12'>
    <h2>
      Teacher Schedule
      <small><%= @teacher.fullname %></small>
      <span class='pull-right'>
      </span>
    </h2>
  </div>
  <table class='table table-condensed table-hover table-bordered'>
    <tr>
      <th>#</th>
      <th>Month</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Slot</th>
      <th>Engagements</th>
      <th width='15%'></th>
    </tr>
    <% @teacher_schedules.each do |ts| %>
    <tr>
      <td><%= ts.id %></td>
      <td><%= ts.start_date.strftime("%B %Y") %></td>
      <td><%= ts.start_date %></td>
      <td><%= ts.end_date %></td>
      <td><%= ts.slot %></td>
      <td><%= ts.program_teacher_schedules.count %></td>
      <td>
        <%= link_to edit_teacher_teacher_schedule_path(@teacher, ts) do %>
          <i class='icon-edit'></i> Edit
        <% end %> |
        <%= link_to teacher_teacher_schedule_path(@teacher, ts), :method => :delete, :confirm => 'Are you sure you want to delete this schedule?' do %>
          <i class='icon-edit'></i> Delete
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

