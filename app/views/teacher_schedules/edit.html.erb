<div class='row'>
  <div class='col-md-12'>
    <div class='page-header'>
      <h2>
        Edit Schedule
      </h2>
    </div>
    <div class='page-body'>
      <div class='row'>
        <div class='col-md-6'>
          
<%= form_tag("/teachers/#{@teacher.id}/teacher_schedules/#{@teacher_schedule.id}", :method => 'put', :class => 'form') do |f| %>
  <%= resource_error_messages!(@teacher_schedule) %>

  <div class="form-group">
    <%= label_tag :start_date %>
    <%= text_field_tag 'teacher_schedule[start_date]', @teacher_schedule.start_date, :class => 'form-control dateSelect' %>
    <br/>
    <%= label_tag :end_date %>
    <%= text_field_tag 'teacher_schedule[end_date]', @teacher_schedule.end_date, :class => 'form-control dateSelect' %>
  </div>

  <div class='form-group'>
     <%= label_tag :center %>
     <%= select_tag 'teacher_schedule[center_id]',  options_for_select(@teacher.centers.map {|e| [e.name, e.id]}), {:class => 'form-control'} %>
  </div>


  <div class='form-group'>
     <%= label_tag :timing %>
     <%= select_tag 'teacher_schedule[timing_id]', options_for_select(Timing.all.map {|e| [e.name, e.id]}), {:class => 'form-control'} %>
  </div>


  <div class='form-group'>
    <%= label_tag :state %>
    <%= select_tag 'teacher_schedule[state]', options_for_select(::Ontology::Teacher::STATE_RESERVE, @teacher_schedule.state), {:class => 'form-control'} %>
  </div>

  <%= submit_tag 'Edit Schedule', :class => 'btn btn-lg btn-primary' %>
<% end %>

<script type='text/javascript'>
$('.dateSelect').datepicker({dateFormat: 'yy-mm-dd'});
</script>


        </div>
      </div>
    </div>
  </div>
</div>

