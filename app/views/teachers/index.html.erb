<div class='row'>
  <div class='col-md-12'>
    <h2>
      Teachers
      <span class='pull-right'>
      </span>
    </h2>
  </div>
  <table class='table table-condensed table-hover table-bordered'>
    <tr>
      <th>T No</th>
      <th>Name</th>
      <th>Program Types</th>
      <th>Zone</th>
      <th>Center(s)</th>
      <%# <th width='15%'>Schedules Published</th> %>
      <th width='20%'></th>
    </tr>
    <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.t_no %></td>
      <td><%= teacher.user.fullname %></td>
      <td><%= (teacher.program_types.map {|pt| pt[:name]}).join(", ") %></td>
      <td><%= teacher.zone.name %></td>
      <td><%= (teacher.centers.map {|c| c[:name]}).join(", ") %></td>
      <% if false %>
        <td><%= teacher.teacher_schedules.where('end_date > ?', Time.now).count() %></td>
      <% end %>
      <td>
        <%= link_to "Show", teacher_path(teacher), :class => 'btn btn-primary btn-sm' %>
        <%= link_to "Schedule", teacher_teacher_schedules_path(teacher), :class => 'btn btn-primary btn-sm' %> 
      </td>
    </tr>
    <% end %>
  </table>
</div>