$('#program_donations_select').html("<%= escape_javascript(options_for_select(@program_donations)) %>");
$('#timings_select').html("<%= escape_javascript(options_for_select(@timings)) %>");
$('#intro_timings_select').html("<%= escape_javascript(options_for_select(@timings)) %>");
$('#first_day_timing_select').html("<%= escape_javascript(options_for_select(@timings)) %>");
$('#last_day_timing_select').html("<%= escape_javascript(options_for_select(@timings)) %>");
<% if @disable_create_button %>
    $("#create_button").prop('disabled', true);
<% else %>
    $("#create_button").prop('disabled', false);
<% end %>
<% if @hide_intro_timings %>
    $("#intro_timings").hide();
<% else %>
    $("#intro_timings").show();
<% end %>
<% if @hide_first_day_timing %>
    $("#first_day_timing").hide();
<% else %>
    $("#first_day_timing").show();
<% end %>
<% if @hide_last_day_timing %>
    $("#last_day_timing").hide();
<% else %>
    $("#last_day_timing").show();
<% end %>
<% if @hide_timings %>
    $("#timings").hide();
<% else %>
    $("#timings").show();
<% end %>
