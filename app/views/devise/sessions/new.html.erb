<div class='row'>
  <div class='col-md-12'>
    <div class='page-header'>
      <h2>Sign-in to PCC Portal</h2>
    </div>
    <div class='page-body'>
      <div class='row'>
        <div class='col-md-6 col-md-offset-1'>
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form' }) do |f| %>
            <div class='form-group'>
              <%= f.label :email %>
              <%= f.email_field :email, :class => 'form-control', :autofocus => true %>
            </div>
            <div class='form-group'>
              <%= f.label :password %>
              <%= f.password_field :password, :class => 'form-control' %>
            </div>
            <%= f.submit "Sign-in", :class => 'btn btn-lg btn-primary' %> <br/><br/>
            <%= link_to "Forgot Password?", new_password_path(resource_name) %> <br/>
            <%#= link_to "Resend Confirmation Instructions?", new_confirmation_path(resource_name) %> <br/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


