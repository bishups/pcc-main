<div class='page-body'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-1'>
      <p> Forgot your password? Please enter you email to get the reset password link. </p>
    </div>
  </div>
</div>
<div class='page-body'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-1'>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,  :class => 'form' }) do |f| %>
        <%= devise_error_messages! %>
            <div class='form-group'>
                <%= f.label :email %>
                <%= f.email_field :email, :class => 'form-control', :autofocus => true %>
            </div>
            <div class='form-group'>
                <%= f.submit "Reset password", :class => 'btn btn-lg btn-primary' %>
            </div>
        <% end %>
    </div>
  </div>
</div>


