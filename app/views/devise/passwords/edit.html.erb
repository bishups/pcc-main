<div class='page-body'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-1 page-header'>
      <h3> Reset your password </h3>
    </div>
  </div>
</div>
<div class='page-body'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-1'>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,  :class => 'form' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
        <div class='form-group'>
          <%= f.label :password, "New password" %>
          <%= f.password_field :password, :class => 'form-control', :autofocus => true %>
        </div>
        <div class='form-group'>
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
        <div>
          <%= f.submit "Reset my password", :class => 'btn btn-lg btn-primary' %>
        </div>
    <% end %>
    </div>
   </div>
</div>

