<div class='row'>
  <div class='col-md-12'>
    <%= render :partial => 'state_bar' %>
    <% unless @venue.description.nil? %>
        <blockquote>
          <%= @venue.description %>
        </blockquote>
    <% end %>
  </div>
</div>

<% if @venue.can_update? %>
<div class='row'>
  <div class='col-md-12'>
    <h3>Last Update <small><%= @venue.last_update %></small></h3>
    <div class = 'row'>
      <div class='col-md-12'>
        <table class='table table-bordered'>
          <tr>
            <td width='20%'><strong> Updated By </strong></td>
            <td>
                <%= @venue.last_updated_by_user.fullname rescue ' ' %>
            </td>
          </tr>
          <tr>
            <td><strong> Updated At </strong></td>
            <td><%= @venue.last_updated_at.strftime('%d %B %Y (%I:%M%P)') rescue ' ' %></td>
          </tr>
          <tr>
            <td><strong> Comments </strong></td>
            <td><%= @venue.comments %></td>
          </tr>
          <tr>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class='row'>
  <div class='col-md-12'>
    <h3>Basic Details</h3>
    <div class = 'row'>
      <div class='col-md-12'>
        <table class='table table-bordered'>
        <tr>
          <td width='20%'><strong>ID #</strong></td>
          <td><%= @venue.id %></td>
        </tr>
          <tr>
            <td><strong>Name</strong></td>
            <td><%= @venue.name %></td>
          </tr>
          <tr>
          <tr>
            <td><strong>Center (s)</strong></td>
            <td><%= (@venue.centers.map {|c| c[:name]}).join(", ") %></td>
          </tr>
          <tr>
            <td width='20%'><strong>Capacity</strong></td>
            <td><%= @venue.capacity %></td>
          </tr>
          <tr>
        </table>
      </div>
    </div>
  </div>
</div>


<div class='row'>
  <div class='col-md-12'>
    <h3>Address</h3>
    <div class = 'row'>
      <div class='col-md-12'>
        <table class='table table-bordered'>
          <tr>
            <td width='20%'><strong> Address </strong></td>
            <td>
              <address>
                <%= @venue.address %>
              </address>
            </td>
          </tr>
          <tr>
            <td><strong> Pin </strong></td>
            <td><%= @venue.pin_code %></td>
          </tr>
          <tr>
        </table>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <h3>Contact</h3>
    <div class = 'row'>
      <div class='col-md-12'>
        <table class='table table-bordered'>
          <tr>
            <td width='20%'><strong>Name</strong></td>
            <td><%= @venue.contact_name %></td>
          </tr>
          <tr>
            <td><strong>Phone</strong></td>
            <td><%= @venue.contact_phone %></td>
          </tr>
          <tr>
            <td><strong>Mobile</strong></td>
            <td><%= @venue.contact_mobile %></td>
          </tr>
          <tr>
            <td><strong>Email</strong></td>
            <td><%= @venue.contact_email %></td>
          </tr>
          <tr>
            <td><strong> Address </strong></td>
            <td>
              <address>
                <%= @venue.contact_address %>
              </address>
            </td>
          </tr>
        </table>
      </div>
    </div>
   </div>
</div>


<% if @venue.can_update? %>
<div class='row'>
  <div class='col-md-12'>
    <h3>Payment</h3>
    <div class = 'row'>
      <div class='col-md-12'>
        <table class='table table-bordered'>
          <tr>
            <td width='20%'><strong>Commercial</strong></td>
            <td><%= @venue.commercial ? "Yes" : "No" %></td>
          </tr>
          <tr>
            <td><strong>Per Day Price (Rs) </strong></td>
            <td><%= @venue.per_day_price %></td>
          </tr>
          <tr>
            <td><strong>Contact Name</strong></td>
            <td><%= @venue.payment_contact_name %></td>
          </tr>
          <tr>
            <td><strong>Mobile</strong></td>
            <td><%= @venue.payment_contact_mobile %></td>
          </tr>
          <tr>
            <td><strong> Address </strong></td>
            <td>
              <address>
                <%= @venue.payment_contact_address %>
              </address>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
