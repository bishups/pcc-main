<div class='row'>
  <div class='col-md-12'>
    <%= render :partial => 'state_bar' %>
  </div>
  <div class='row'>
  <div class='col-md-12'>
    <table class='table table-bordered'>
      <tr>
        <td width='20%'><strong>Name</strong></td>
        <td><%= @kit.name %></td>
      </tr>
      <tr>
        <td><strong>Center</strong></td>
        <td><%= @kit.center.name rescue '' %></td>
      </tr>
      <tr>
        <td><strong>Max Participants</strong></td>
        <td>
          <address>
            <%= @kit.capacity %>
          </address>
        </td>
      </tr>
      <tr>
        <td><strong>Booking Start Date</strong></td>
        <td><%= @kit_schedule.start_date %></td>
      </tr>
      <tr>
        <td><strong>Booking End Date</strong></td>
        <td><%= @kit_schedule.end_date %></td>
      </tr>
      <tr>
        <td><strong>Comments</strong></td>
        <td><%= @kit_schedule.comments %></td>
      </tr>
      <% if !@kit_schedule.issued_to_person_id.nil?%>
      <tr>
        <td><strong>Kit Issued to</strong></td>
        <td><%= @kit_schedule.issued_to_person.email %></td>
      </tr>
      <%end%>

      <% if !@kit_schedule.blocked_by_person_id.nil? %>
      <tr>
        <td><strong>Kit Assigned to</strong></td>
        <td><%= @kit_schedule.blocked_by_person.email %></td>
      </tr>
      <%end%>
    </table>
  </div>
</div>