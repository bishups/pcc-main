<div class='form-group'>
    <% if ::KitSchedule::EVENTS_WITH_COMMENTS.include?(@trigger) %>
        <% unless @comment_category.empty? %>
            <label for='comment_category'>Comments</label> <small>(mandatory)</small>
            <%= select_tag 'comment_category', options_for_select(@comment_category.map {|cc| [cc] }), :class => 'form-control' %>
            <label>Details</label>
            <textarea name='comments' class='form-control'></textarea>
        <% else %>
          <label>Comments</label> <small>(mandatory)</small>
          <textarea name='comments' class='form-control'></textarea>
        <% end %>
    <% elsif ::KitSchedule::EVENTS_WITH_FEEDBACK.include?(@trigger) %>
      <label>Feedback</label> <small>(mandatory)</small>
      <textarea name='feedback' class='form-control'></textarea>
    <% else %>
        <label>Comments</label> <small>(optional)</small>
        <textarea name='comments' class='form-control'></textarea>
    <% end %>
</div>