<h1>Listing kit_schedules</h1>

<table>
  <tr>
    <th>Kit Name</th>
    <th>Program Name</th>
    <th>Start Date</th>
    <th>End Date </th>
    <th> State </th>
  </tr>

<% @kit_schedules.each do |kit_schedule| %>
  <tr>
    <%= kit_schedule.kit.kit_name_string %>
    <%= kit_schedule.program.name %>
    <%= kit_schedule.start_date.strftime('%d/%m/%Y') %>
    <%= kit_schedule.end_date.strftime('%d/%m/%Y') %>
    <%= kit_schedule.state %>
   
  </tr>
<% end %>
</table>

<br />

<%# if @kit_id.nil? %>
  <%#= link_to 'New Kit schedule', new_kit_schedule_path %>
<%# else %>
  <%#= link_to 'New Kit schedule', new_kit_schedule_path(:kit_id => @kit_id) %>
<%#  end %>
